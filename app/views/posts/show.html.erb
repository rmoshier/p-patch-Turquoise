<h1>posts#show</h1>

  <div class='full-post'>

    <div class='title'>
      <h2><%= @post.title %></h2>
    </div>

    <div class='author'>
      <h3><%= @post.author %></h3>
    </div>

    <div class='date'>
      <h2><%= @post.created_at %></h2>
    </div>

    <div class='content'>
      <p><%= @post.content %></p>
    </div>

  </div>
